<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopassignment4.AdminEditTimetableController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="View/Edit Timetable">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TableView fx:id="timetableTableView" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="dayColumn" text="Day" />
                <TableColumn fx:id="timeColumn" text="Time" />
                <TableColumn fx:id="courseColumn" text="Course" />
                <TableColumn fx:id="sectionColumn" text="Section" />
                <TableColumn fx:id="roomColumn" text="Room" />
                <TableColumn fx:id="instructorColumn" text="Instructor" />
            </columns>
        </TableView>
        <Button fx:id="addButton" layoutY="300.0" mnemonicParsing="false" prefWidth="80.0" text="Add" />
        <Button fx:id="editButton" layoutX="92.0" layoutY="300.0" mnemonicParsing="false" prefWidth="80.0" text="Edit" />
        <Button fx:id="deleteButton" layoutX="183.0" layoutY="300.0" mnemonicParsing="false" prefWidth="80.0" text="Delete" />
    </children>
</AnchorPane>
